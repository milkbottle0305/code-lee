{
  "name": "codelee-server",
  "version": "0.1.0",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start:prod": "cross-env NODE_ENV=production node dist/index.js",
    "prisma:dev": "npx dotenv-cli -e .env.development -- prisma migrate dev",
    "prisma:prod": "npx dotenv-cli -e .env.production -- prisma migrate deploy",
    "prisma:generate:dev": "npx dotenv-cli -e .env.development -- prisma generate",
    "prisma:generate:prod": "npx dotenv-cli -e .env.production -- prisma generate",
    "prisma:studio:dev": "npx dotenv-cli -e .env.development -- prisma studio",
    "prisma:studio:prod": "npx dotenv-cli -e .env.production -- prisma studio",
    "test": "JWT_SECRET=testsecret vitest"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "bcrypt": "^5.1.1",
    "codelee-common": "workspace:*",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.0",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.16",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@vitest/ui": "^1.4.0",
    "dotenv-cli": "^8.0.0",
    "prisma": "^5.9.1",
    "supertest": "^7.1.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3",
    "vitest": "^1.4.0"
  }
}
